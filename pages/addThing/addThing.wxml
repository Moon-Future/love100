<cu-custom isBack="{{true}}">
  <view slot="backText"></view>
  <view slot="content">比百分百还要多</view>
</cu-custom>

<view class="form-box">
  <view wx:if="{{file}}" class="preview-image">
    <image class="" src="{{file}}" mode="aspectFit"></image>
    <text class="cuIcon-roundclose text-red icon-delete" bindtap="deleteImage"></text>
  </view>
  <view wx:else class="image-add-box" bindtap="selectImage">
    <text class="text-white cuIcon-camera icon-add"></text>
  </view>
  <view class="form-item cu-bar input">
    <input type="text" value="{{name}}" placeholder="未来就是和你做有趣的事..." bindinput="inputChange" />
  </view>
  <view class="form-item">
    <button class="cu-btn bg-blue shadow lg form-submit" bindtap="submit">提交</button>
    <button class="cu-btn bg-red shadow lg form-submit" bindtap="delete" wx:if="{{editFlag}}">删除</button>
  </view>
  <view class="form-item form-tips">仅自己可见</view>
</view>
  
  