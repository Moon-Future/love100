.message-btn {
  display: flex;
  justify-content: flex-end;
  margin: 10rpx;
}

.message-btn .cu-btn {
  border-radius: 4px;
}

.message-item {
  padding: 10rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.message-title {
  font-size: 30rpx;
}

.message-content {
  font-size: 26rpx;
  margin: 10rpx 0;
}

.message-time {
  font-size: 26rpx;
  color: var(--gray);
}

.unread .message-title {
  color: var(--red);
  font-weight: bold;
}

.message-empty {
  text-align: center;
}