<swiper class="card-swiper" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperList}}" wx:key="index" class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFit"></image>
    </view>
    <view class="title-wrapper" bindtap="finished">
			<radio checked="{{item.finished}}"></radio>
			<view class="title">{{item.title}}</view>
		</view>
  </swiper-item>
</swiper>