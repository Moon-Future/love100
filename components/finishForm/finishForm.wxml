<view class="cu-modal {{show ? 'show' : ''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">{{title}}</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="cu-form-group">
      <view class="title">地点</view>
      <input class="from-input" placeholder="完成地点" value="{{adr}}" bindinput="inputChange"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">时间</view>
      <picker mode="date" value="{{date}}" start="1900-05-20" end="2100-05-20" bindchange="dateChange">
        <view class="picker">
          {{date}}
        </view>
      </picker>
    </view>
    <view class="padding flex flex-direction">
      <button class="cu-btn bg-red margin-tb-sm lg" bindtap="save" loading="{{loading}}">保存</button>
    </view>
  </view>
</view>